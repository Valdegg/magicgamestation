# MTG Arbitrage Configuration
# Adjust these values to customize the analysis

# Target net margin (as decimal, e.g., 0.15 = 15%)
TARGET_NET_MARGIN=0.15

# Cardmarket fee rate (as decimal, e.g., 0.05 = 5%)
CARDMARKET_FEE=0.05

# Price range for filtering candidates (in EUR)
PRICE_MIN=20.0
PRICE_MAX=200.0

# Minimum discount from trend price to consider (as decimal, e.g., 0.15 = 15%)
TREND_DISCOUNT_THRESHOLD=0.05

# Target rank in top-10 listings (1-10, where 8-10 provides good balance)
RANK_TARGET=9

# Amount to undercut competitors by (in EUR)
UNDERCUT_BUFFER=0.20

# Minimum AVG7 value for liquidity check (in EUR)
MIN_AVG7=0.01

# URL filtering for live price checking
# Set to true to use German sellers only, false for all sellers
USE_GERMAN_SELLERS_ONLY=false

# Wishlist price range filtering (in EUR)
WISHLIST_PRICE_MIN=10.0
WISHLIST_PRICE_MAX=500.0

# Condition premium for EX+/NM cards (as decimal, e.g., 0.15 = 15%)
# TREND includes all conditions, so EX+ should naturally cost more
# Set to 0.20 to allow EX+ cards to be up to 20% above TREND and still be "good"
CONDITION_PREMIUM=0.20